          <div class="card__cuisine-display"><img src="<%= cuisine.image %>" alt=""></div>
          <div class="card__cuisine-info"><p class="info__name"><%= cuisine.name %></p><p class="info__price"><%= cuisine.price %></div></p>
          <a class="card__add-cart-btn" href="">加入購物車</a>
        </article>
        <% } %>
      </section>
    </section>
