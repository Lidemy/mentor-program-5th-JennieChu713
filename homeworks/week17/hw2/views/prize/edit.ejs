<%- include('../templates/header') %>
<%- include('../templates/navbar_back') %>
  <main class="admin container">
    <%- include('../templates/alert') %>
    <section class="admin__object-edit">
      <h2 class="edit__title">獎項設定</h2>
      <form action="/backstage/prize/<%= prize.id %>/edit" method="POST" class="edit__area">
        <label for="image">圖片網址： </label>
        <input id="image" name="image" type="text" value="<%= prize.image %>" placeholder="圖片網址">
        <label for="name">獎項名稱：</label>
        <input id="name" name="name" type="text" value="<%= prize.name %>" placeholder="獎項名稱">
        <label for="rate">中獎機率：</label>
        <label for="amount">數量：</label>
        <input id="amount" name="amount" type="text" value="<%= prize.amount %>" placeholder="總數量">
        <input id="rate" name="rate" type="number" min="1", max="100" step="1" value="<%= prize.rate %>" placeholder="請設定於 1~100% 之間">
        <label for="description">說明：</label>
        <textarea id="description" name="description" rows="10" type="text" placeholder= "說明"><%= prize.description %></textarea>
        <input type="hidden" name="id" value="<%= prize.id %>">
        <input type="submit" value="更改">
      </form>
    </section>
  </main>
  <%- include('../templates/footer') %>