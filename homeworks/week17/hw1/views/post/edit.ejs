<%- include('../templates/header') %>
<%- include('../templates/navbar') %>
<%- include('../templates/banner') %>
  <main class="blog">
    <article class="blog__editor">
      <form class="editor__form" action="/posts/<%= post.id %>/edit" method="POST">
        <label for="title">標題</label>
        <input type="text" name="title" placeholder="title" value="<%= post.title%>">
        <label for="category">分類</label>
        <select name="categoryId" id="category">
          <option value="<%= post.CategoryId %>" selected><%= post.Category.categoryName %>(目前所屬)</option>
          <!-- catagory render -->
          <% for (let category of categories) { %>
          <option value="<%= category.id %>"><%= category.categoryName %></option>
          <% } %>
        </select>
        <textarea name="content" id="editor"><%= post.content %></textarea>
        <input type="hidden" name="id" value="<%= post.id %>">
        <input type="submit">
      </form>
    </article>
  </main>
<%- include('../templates/footer') %>